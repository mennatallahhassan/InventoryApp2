<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ntl.nineth.inventoryapp.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/product_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Product Name" />

        <EditText
            android:id="@+id/price3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Price"
            android:inputType="number" />

        <EditText
            android:id="@+id/current_quantity3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Quantity"
            android:inputType="number" />

        <EditText
            android:id="@+id/Supplier_Contact3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Supplier Contact"
            android:inputType="phone" />

        <ImageButton
            android:id="@+id/pic3"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/uploadImg_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#69aad0"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Upload Image"
            android:textColor="#fff" />

        <Button
            android:id="@+id/add_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#69aad0"
            android:text="Add Product"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>