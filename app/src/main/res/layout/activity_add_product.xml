<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.ntl.nineth.inventoryapp.AddProductActivity">


    <EditText
        android:id="@+id/product_name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Product Name" />

    <EditText
        android:id="@+id/price3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Price" />

    <EditText
        android:id="@+id/current_quantity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Quantity" />

    <EditText
        android:id="@+id/Supplier_Contact3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Supplier Contact" />

    <ImageButton
        android:id="@+id/pic3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/uploadImg_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Upload Image" />

    <Button
        android:id="@+id/add_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Product" />
</LinearLayout>
